<%= form_tag "#{user_path(user)}/change_password", method: :post do %>
	<% if @user.errors.any? %>
		<div class="alert alert-danger">
		  <strong><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</strong>

		  <ul>
		  <% @user.errors.full_messages.each do |msg| %>
		    <li><%= msg %></li>
		  <% end %>
		  </ul>
		</div>
	<% end %>
	<%= hidden_field_tag "user_id", user.id %>
	<div class="form-group">
		<%= label_tag "New password" %>
		<%= password_field_tag "password", "", class: "form-control" %>
	</div>
	<div class="form-group">
		<%= label_tag "New password confirmation" %>
		<%= password_field_tag "password_confirmation", "", class: "form-control" %>
	</div>
	<div class="form-group">
		<%= submit_tag "Change password", class: "btn btn-info" %>
	</div>
<% end %>