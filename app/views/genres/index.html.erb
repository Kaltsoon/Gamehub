<div class="page-header">
  <h1>Genres</h1>
</div>
<%= link_to raw("<i class='fa fa-plus'></i> New Genre"), new_genre_path, class: "btn btn-success" if is_user_allowed_to?("add_genre") %>
<h3>All <small><%= pluralize(@genres.count,"genre") %></small></h3>
<table ng-app="app" ng-controller="GenresController" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><a ng-click="click('name')"><i class="fa fa-sort"></i> Name</a></th>
      <th><a ng-click="click('games')"><i class="fa fa-sort"></i> Number of games</a></th>
    </tr>
  </thead>

  <tbody>
    <tr ng-repeat="genre in genres | orderBy:order">
      <td><a href="genres/{{genre.id}}">{{genre.name}}</a></td>
      <td><span class="badge">{{genre.games.length}}</span></td>
    </tr>
  </tbody>
</table>
