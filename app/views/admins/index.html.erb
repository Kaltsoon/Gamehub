<% if not notice.nil? %>
  <div class="alert alert-info"><%= notice %></div>
<% end %>
<div class="page-header">
  <h1>Admins</h1>
</div>
<%= link_to raw("<i class='fa fa-plus'></i> New admin"), new_admin_path, class: "btn btn-success" %>
<h3>All <small><%= pluralize(@admins.count, "admin") %></small></h3>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Add game</th>
      <th>Remove game</th>
      <th>Edit game</th>
      <th>Add genre</th>
      <th>Remove genre</th>
      <th>Edit genre</th>
      <th>Give rights</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= link_to admin.user, user_path(admin.user) %></td>
        <td>
          <%= raw("<span class='label label-success'><i class='fa fa-check'></i></span>") if admin.add_game %>
          <%= raw("<span class='label label-danger'><i class='fa fa-times'></i></span>") if not admin.add_game %>
        </td>
        <td>
          <%= raw("<span class='label label-success'><i class='fa fa-check'></i></span>") if admin.remove_game %>
          <%= raw("<span class='label label-danger'><i class='fa fa-times'></i></span>") if not admin.remove_game %>
        </td>
        <td>
          <%= raw("<span class='label label-success'><i class='fa fa-check'></i></span>") if admin.edit_game %>
          <%= raw("<span class='label label-danger'><i class='fa fa-times'></i></span>") if not admin.edit_game %>
        </td>
        <td>
          <%= raw("<span class='label label-success'><i class='fa fa-check'></i></span>") if admin.add_genre %>
          <%= raw("<span class='label label-danger'><i class='fa fa-times'></i></span>") if not admin.add_genre %>
        </td>
        <td>
          <%= raw("<span class='label label-success'><i class='fa fa-check'></i></span>") if admin.remove_genre %>
          <%= raw("<span class='label label-danger'><i class='fa fa-times'></i></span>") if not admin.remove_genre %>
        </td>
        <td>
          <%= raw("<span class='label label-success'><i class='fa fa-check'></i></span>") if admin.edit_genre %>
          <%= raw("<span class='label label-danger'><i class='fa fa-times'></i></span>") if not admin.edit_genre %>
        </td>
        <td>
          <%= raw("<span class='label label-success'><i class='fa fa-check'></i></span>") if admin.give_rights %>
          <%= raw("<span class='label label-danger'><i class='fa fa-times'></i></span>") if not admin.give_rights %>
        </td>
        <td><%= link_to raw("<i class='fa fa-pencil'></i> Edit"), edit_admin_path(admin), class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to raw("<i class='fa fa-times'></i> Destroy"), admin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
