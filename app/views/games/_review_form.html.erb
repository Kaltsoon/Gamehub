<%= form_tag reviews_path, method: :post do %>
	<%= hidden_field_tag "review[user_id]", current_user.id %>
	<%= hidden_field_tag "review[game_id]", game.id %>
	<div class="form-group">
		<%= label_tag "Score (0-100)" %>
		<%= number_field_tag "review[score]", "", class: "form-control" %>
	</div>
	<div class="form-group">
		<%= label_tag "Review" %>
		<%= text_area_tag "review[content]", "", class: "form-control" %>
	</div>
	<%= submit_tag "Submit your review", class: "btn btn-info" %>
<% end %>