<% if not notice.nil? %>
	<div class="alert alert-danger">
		<%= notice %>
	</div>
<% end %>
<div class="page-header">
	<h1>Sign in</h1>
</div>
<%= form_tag signin_path, method: :post do %>
	<div class="form-group">
		<%= label_tag "Username" %>
		<%= text_field_tag "username", "", class: "form-control" %>
	</div>
	<div class="form-group">
		<%= label_tag "Password" %>
		<%= password_field_tag "password", "", class: "form-control" %>
	</div>
	<%= submit_tag "Sign in", class: "btn btn-info" %>
<% end %>