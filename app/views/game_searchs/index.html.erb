<div class="page-header">
	<h1>Game search</h1>
</div>
<p class="text-muted">Search powered by <a href="http://www.giantbomb.com" target="blank">Giant Bomb</a></p>
<%= form_tag search_path, method: :post do %>
<div class="row">
  <div class="col-lg-12">
    <div class="input-group">
      <%= text_field_tag "name", "", class: "form-control" %>
      <span class="input-group-btn">
        <%= submit_tag "Search", class: "btn btn-info" %>
      </span>
    </div>
  </div>
</div>
<% end %>
<%= raw("<br/><div class='alert alert-danger'>#{notice}</div>") unless notice.nil? %>
<% if(not @game.nil?) %>
<div class="page-header">
	<h1><%= @game.name %></h1>
</div>
<div class="row">
	<div class="col-md-2">
		<%= image_tag @game.image, class: "img-rounded img-responsive" %>
	</div>
	<div class="col-md-10">
		<%= raw(@game.description) %>
	</div>
</div>
<% end %>